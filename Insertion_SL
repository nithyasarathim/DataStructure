#include <stdio.h>
#include <stdlib.h>
int count = 0;
struct node {
  int data;
  struct node *next;
};
struct node *create_node(int data) {
  struct node *nn = (struct node *)malloc(sizeof(struct node));
  nn->data = data;
  nn->next = NULL;
  return nn;
}
void display(struct node *head) {
  struct node *temp = head;
  while (temp != NULL) {
    printf("%d", temp->data);
    temp = temp->next;
  }
}
void Insert_End(struct node **head, int data) {
  struct node *temp = head;
  struct node *nn = create_node(data);
  if (*head == NULL) {
    *head = nn;
  }
  while (temp->next != NULL) {
    temp = temp->next;
  }

  temp->next = nn;
}
void Insert_Beg(struct node **head, int data) {
  struct node *nn = create_node(data);
  if (*head == NULL) {
    *head = nn;
  } else {
    nn->next = *head;
    *head = nn;
  }
}
void Insert_pos(struct node **head, int data, int pos) {
  struct node *nn = create_node(data);
  if (pos > count) {
    printf("The position is invalid");
  } else {
    struct node *temp = *head;
    for (int i = 0; i < pos; i++) {
      temp = temp->next;
    }
    nn->next = temp->next;
    temp->next = nn;
  }
}
int main()
{
  int a = 0, data = 0, pos;
  int *head = NULL;
  while (a != 4) {
    printf("Enter the data for SLL :");
    scanf("%d", &data);
    printf("Where to insert ?:\n1) Beginning\n2) Position\n 3) End");
    scanf("%d", &a);
  }
}
